# Claude Code Template Environment Variables
# Copy this file to .env and update with your values

# Project Configuration
PROJECT_NAME=my-claude-code-project
PROJECT_TYPE=multi-language

# Language-specific settings
DEFAULT_LANGUAGE=python
SUPPORTED_LANGUAGES=python,go,rust,typescript,java

# Development Environment
NODE_ENV=development
PYTHON_ENV=development

# API Keys (if needed for your project)
# API_KEY=your-api-key-here
# DATABASE_URL=postgres://user:pass@localhost:5432/dbname

# Claude Code Settings
CLAUDE_CODE_PROJECT_TYPE=template
CLAUDE_CODE_VERSION=1.0.0

# Feature Flags
ENABLE_PARALLEL_DEVELOPMENT=true
ENABLE_AUTO_TESTING=true
ENABLE_AUTO_DOCUMENTATION=true

# Build Settings
BUILD_OUTPUT_DIR=./dist
TEST_COVERAGE_THRESHOLD=80

# Git Worktree Settings
WORKTREE_BASE_DIR=./worktrees
MAX_PARALLEL_WORKTREES=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=false

# CI/CD
CI_PIPELINE_ENABLED=true
AUTO_DEPLOY_ON_MERGE=false