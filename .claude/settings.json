{
  "description": "Claude Code project settings",
  "permissions": {
    "allow": [
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "MultiEdit(*)",
      "Bash(*)",
      "Grep(*)",
      "Glob(*)",
      "WebSearch(*)",
      "WebFetch(*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(sudo rm -rf *)"
    ]
  },
  "hooks": {
    "pre_tool_use": ".claude/hooks/pre_tool_use.sh",
    "post_tool_use": ".claude/hooks/post_tool_use.sh"
  },
  "project": {
    "type": "template",
    "language": "multi",
    "framework": "none",
    "test_command": "echo 'Configure test command in settings.json'",
    "lint_command": "echo 'Configure lint command in settings.json'",
    "build_command": "echo 'Configure build command in settings.json'"
  }
}