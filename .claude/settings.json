{
  "permissions": {
    "allow": [
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "MultiEdit(*)",
      "Bash(*)",
      "Grep(*)",
      "Glob(*)",
      "WebSearch(*)",
      "WebFetch(*)",
      "NotebookRead(*)",
      "NotebookEdit(*)",
      "LS(*)",
      "TodoWrite(*)",
      "Task(*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(sudo rm -rf *)"
    ],
    "additionalDirectories": []
  },
  "hooks": {
    "PreToolUse": {
      "Bash": ".claude/hooks/pre_tool_use.sh"
    },
    "PostToolUse": {
      "Bash": ".claude/hooks/post_tool_use.sh"
    }
  },
  "env": {
    "CLAUDE_CODE_PROJECT_TYPE": "template"
  },
  "cleanupPeriodDays": 30,
  "includeCoAuthoredBy": true,
  "enableAllProjectMcpServers": false
}